<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.uco.apatel19.tpaakashp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activities.LoadingScreen"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.MainMenu"
            android:label="@string/title_activity_main_menu"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Activities.Game"
            android:label="@string/title_activity_game" />
        <activity
            android:name=".Activities.HighScore"
            android:label="@string/title_activity_high_score" />
        <activity
            android:name=".Activities.Controls"
            android:label="@string/title_activity_controls" />
        <activity
            android:name=".Activities.Options"
            android:label="@string/title_activity_options"></activity>
    </application>

</manifest>