<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<!--Name-->
    <TextView
        android:id="@+id/Name_Label"
        android:text="Name"
        android:textSize="20sp"
        android:layout_marginTop="25sp"
        android:layout_marginLeft="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/Edit_Name"
        android:layout_width="240sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_marginRight="15sp"
        android:layout_alignParentRight="true"
        android:inputType="textCapWords"/>
<!--Password-->
    <TextView
        android:id="@+id/Password_Label"
        android:text="Password"
        android:textSize="20sp"
        android:layout_below="@+id/Name_Label"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="40sp"
        android:layout_marginLeft="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/Edit_Password"
        android:layout_width="240sp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Edit_Name"
        android:layout_marginTop="15sp"
        android:layout_marginRight="15sp"
        android:layout_alignParentRight="true"
        android:inputType="textPassword"/>
<!--Date of birth-->
    <TextView
        android:id="@+id/DOB_Label"
        android:text="Date of Birth"
        android:textSize="20sp"
        android:layout_below="@+id/Password_Label"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="25sp"
        android:layout_marginLeft="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/DOB_Button"
        android:text="Pick Date"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:layout_width="240sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15sp"
        android:layout_marginRight="15sp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/Edit_Password"/>
<!--Gender-->
    <TextView
        android:id="@+id/Gender_Label"
        android:text="Gender"
        android:textSize="20sp"
        android:layout_below="@+id/DOB_Label"
        android:layout_marginTop="23sp"
        android:layout_marginLeft="15sp"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RadioGroup
        android:id="@+id/Gendergroup_Radio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/DOB_Button"
        android:layout_alignParentRight="true"
        android:layout_marginRight="90sp"
        android:layout_marginTop="10sp">
        <RadioButton
            android:id="@+id/Male_RadioButton"
            android:textSize="18sp"
            android:text="Male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/Female_RadioButton"
            android:textSize="18sp"
            android:text="Female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RadioGroup>
<!--Skills-->
    <TextView
        android:id="@+id/Skills_Label"
        android:text="Skills"
        android:textSize="20sp"
        android:layout_marginLeft="15sp"
        android:layout_marginTop="13sp"
        android:layout_below="@id/Gender_Label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <CheckBox
        android:id="@+id/Android_Check"
        android:text="Android"
        android:textSize="18sp"
        android:layout_below="@id/Gendergroup_Radio"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10sp"
        android:layout_marginRight="160sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <CheckBox
        android:id="@+id/Java_Check"
        android:text="Java"
        android:textSize="18sp"
        android:layout_below="@id/Gendergroup_Radio"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10sp"
        android:layout_marginRight="85sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <CheckBox
        android:id="@+id/Kotlin_Check"
        android:text="Kotlin"
        android:textSize="18sp"
        android:layout_below="@id/Gendergroup_Radio"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10sp"
        android:layout_marginRight="8sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <CheckBox
        android:id="@+id/Swift_Check"
        android:text="Swift"
        android:textSize="18sp"
        android:layout_below="@id/Android_Check"
        android:layout_alignParentRight="true"
        android:layout_marginRight="182sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <CheckBox
        android:id="@+id/iOS_Check"
        android:text="iOS"
        android:textSize="18sp"
        android:layout_below="@id/Android_Check"
        android:layout_alignParentRight="true"
        android:layout_marginRight="120sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
<!--Classification-->
    <TextView
        android:id="@+id/Classification_Label"
        android:text="Classification"
        android:textSize="20sp"
        android:layout_marginLeft="15sp"
        android:layout_marginTop="45sp"
        android:layout_below="@id/Skills_Label"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Spinner
        android:id="@+id/Classification_Spinner"
        android:layout_below="@id/Swift_Check"
        android:layout_alignParentRight="true"
        android:layout_marginTop="12sp"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="120sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </Spinner>
<!--Register-->
    <Button
        android:id="@+id/Register_Button"
        android:text="Register"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:layout_below="@id/Classification_Spinner"
        android:layout_alignParentRight="true"
        android:layout_marginRight="150sp"
        android:layout_marginTop="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>