<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/Display"
        android:text="Play Tic-Tac_Toe: O's Turn!"
        android:textSize="25sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"/>

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="match_parent" android:columnCount="3"
        android:rowCount="4">

        <Button
            android:id="@+id/R0C0_Button"
            android:textSize="55sp"
            android:textColor="#0d1016"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="5sp"/>
        <Button
            android:id="@+id/R0C1_Button"
            android:textSize="55sp"
            android:textColor="#0d1016"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginTop="5sp" />
        <Button
            android:id="@+id/R0C2_Button"
            android:textSize="55sp"
            android:textColor="#0d1016"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginRight="10sp"
            android:layout_marginTop="5sp" />
        <Button
            android:id="@+id/R1C0_Button"
            android:textSize="55sp"
            android:textColor="#0d1016"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginLeft="10sp" />
        <Button
            android:id="@+id/R1C1_Button"
            android:textSize="55sp"
            android:textColor="#0d1016"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>
        <Button
            android:id="@+id/R1C2_Button"
            android:textSize="55sp"
            android:textColor="#0d1016"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginRight="10sp" />
        <Button
            android:id="@+id/R2C0_Button"
            android:textSize="55sp"
            android:textColor="#0d1016"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginLeft="10sp" />
        <Button
            android:id="@+id/R2C1_Button"
            android:textSize="55sp"
            android:textColor="#0d1016"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1" />
        <Button
            android:id="@+id/R2C2_Button"
            android:textSize="55sp"
            android:textColor="#0d1016"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginRight="10sp" />
        <Button
            android:id="@+id/Newgame_Button"
            android:text="New Game"
            android:textSize="22sp"
            android:textAllCaps="false"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnWeight=".5"
            android:layout_rowWeight=".1"
            android:layout_columnSpan="2"
            android:layout_marginLeft="10sp"
            android:layout_marginBottom="5sp"/>
        <Button
            android:id="@+id/Log_Button"
            android:text="Log"
            android:textSize="22sp"
            android:textAllCaps="false"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_columnWeight=".5"
            android:layout_rowWeight=".1"
            android:layout_marginRight="10sp"
            android:layout_marginBottom="5sp"/>


    </GridLayout>

</LinearLayout>